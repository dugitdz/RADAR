{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: gcc.exe build active file (UCRT64 + FFTW)",
      "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
      "args": [
        "-Wall",
        "-Wextra",
        "-g3",
        "${file}",
        "-o",
        "${fileDirname}\\output\\${fileBasenameNoExtension}.exe",
        "-lfftw3",
        "-lm"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: gcc (MSYS2 UCRT64) + FFTW"
    },

    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build active file (MSVC)",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$msCompile"],
      "detail": "compiler: cl.exe"
    }
  ]
}
